{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "importHelpers": true,
    "isolatedModules": true,
    "locale": "en",
    "moduleResolution": "Node",
    "newLine": "lf",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "importsNotUsedAsValues": "error",
    "allowUnreachableCode": false,
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@workspaces/build": ["./packages/build/src/index.ts"],
      "@workspaces/common": ["./packages/common/src/index.ts"],
      "@workspaces/constants": ["./packages/constants/src/index.ts"],
      "@workspaces/filesystem": ["./packages/filesystem/src/index.ts"],
      "@workspaces/index": ["./packages/index/src/index.ts"],
      "@workspaces/interfaces": ["./packages/interfaces/src/index.ts"],
      "@workspaces/internal": ["./packages/internal/src/index.ts"],
      "@workspaces/ngxs": ["./packages/ngxs/src/index.ts"],
      "@workspaces/resize-observable": ["./packages/resize-observable/src/index.ts"],
      "@workspaces/rxjs": ["./packages/rxjs/src/index.ts"],
      "@workspaces/traits": ["./packages/traits/src/index.ts"],
      "@workspaces/types": ["./packages/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "*.spec.ts"],
  "include": ["./**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "target": "ES6",
      "module": "UMD"
    }
  }
}
