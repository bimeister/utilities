{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "DOM"],
    "importHelpers": true,
    "isolatedModules": true,
    "locale": "en",
    "moduleResolution": "Node",
    "newLine": "lf",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "pretty": true,
    "removeComments": false,
    "sourceMap": false,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "importsNotUsedAsValues": "error",
    "allowUnreachableCode": false,
    "target": "ESNext",
    "module": "ESNext",
    "paths": {
      "@bimeister/utilities.build": ["./packages/build/src/index.ts"],
      "@bimeister/utilities.common": ["./packages/common/src/index.ts"],
      "@bimeister/utilities.constants": ["./packages/constants/src/index.ts"],
      "@bimeister/utilities.filesystem": ["./packages/filesystem/src/index.ts"],
      "@bimeister/utilities.index": ["./packages/index/src/public-api.ts"],
      "@bimeister/utilities.interfaces": ["./packages/interfaces/src/index.ts"],
      "@bimeister/utilities.internal": ["./packages/internal/src/index.ts"],
      "@bimeister/utilities.ngxs": ["./packages/ngxs/src/index.ts"],
      "@bimeister/utilities.performance": ["./packages/performance/src/index.ts"],
      "@bimeister/utilities.resize-observable": ["./packages/resize-observable/src/index.ts"],
      "@bimeister/utilities.rxjs": ["./packages/rxjs/src/index.ts"],
      "@bimeister/utilities.traits": ["./packages/traits/src/index.ts"],
      "@bimeister/utilities.types": ["./packages/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "*.spec.ts"],
  "include": ["./**/*.ts"],
  "ts-node": {
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext"
    }
  }
}
