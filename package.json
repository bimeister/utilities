{
  "name": "@bimeister/utilities",
  "version": "0.1.0",
  "main": "dist/index.js",
  "license": "SEE LICENSE IN LICENSE",
  "description": "BIMeister utilities library",
  "repository": {
    "type": "git",
    "url": "https://git.bimeister.com/common/utilities"
  },
  "scripts": {
    "build-cli": "build-cli",
    "barrel": "barrelsby --config=\"./barrelsby.json\" --directory=\"./src/lib\"",
    "compile:lib-esm2015": "tsc --project tsconfig.lib-esm2015.json",
    "compile:lib-umd": "tsc --project tsconfig.lib-umd.json",
    "compile:lib-typings": "tsc --project tsconfig.lib-typings.json",
    "build": "yarn build && gulp build:compile-all",
    "build:ci": "yarn barrel && gulp build:clean-up && gulp build:compile-all",
    "build:docs": "yarn barrel && typedoc --options typedoc.json  --tsconfig tsconfig.docs.json --includeDeclarations --exclude \"**/*+(index|api|.spec|.e2e).ts\" --excludeNotExported --excludePrivate --excludeProtected --excludeExternals --stripInternal",
    "autofix": "yarn run lint:debug && yarn run prettier:format && yarn run lint:inspect",
    "lint:debug": "tslint --format prose --project tsconfig.json --fix",
    "lint:inspect": "tslint --format stylish --project tsconfig.json && yarn run cspell:check",
    "lint:codestyle": "yarn run prettier:check",
    "test": "jest --config ./jest.config.ts",
    "test:watch": "jest --config ./jest.config.ts --watch --coverage false --verbose false",
    "test:ci": "yarn run test",
    "prettier:check": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --check \"./**/*.{json,js,ts}\"",
    "prettier:format": "prettier --loglevel log --config ./.prettierrc --ignore-path ./.prettierignore --write \"./**/*.{json,js,ts}\"",
    "cspell:check": "cspell \"src/**/*.*\" --config=\"cspell.json\""
  },
  "dependencies": {
    "fancy-log": "^1.3.3",
    "snake-case": "^3.0.3",
    "uuid": "^8.3.0"
  },
  "peerDependencies": {
    "rxjs": "^6.6.0"
  },
  "devDependencies": {
    "@bimeister/build-cli": "^0.1.0-9d12670c",
    "@types/fancy-log": "^1.3.1",
    "@types/gulp": "^4.0.6",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@types/uuid": "^8.0.0",
    "barrelsby": "^2.2.0",
    "cspell": "^5.1.3",
    "cspell-dict-russian": "^1.1.17",
    "gulp": "^4.0.2",
    "jest": "^26.1.0",
    "jest-junit": "^12.0.0",
    "prettier": "^2.0.5",
    "rxjs": "^6.6.0",
    "ts-jest": "^26.1.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.2",
    "typedoc": "<0.20.0",
    "typedoc-plugin-external-module-name": "^4.0.6",
    "typescript": "^4.0.0"
  },
  "browser": {
    "fs": false,
    "path": false
  }
}
