{
  "name": "@meistersoft/utilities",
  "version": "0.1.0",
  "main": "dist/index.js",
  "license": "SEE LICENSE IN LICENSE",
  "description": "BIMeister utilities library",
  "repository": {
    "type": "git",
    "url": "https://git.bimeister.com/common/utilities.git"
  },
  "scripts": {
    "barrel": "barrelsby --config=\"./barrelsby.json\" --directory=\"./src/lib\"",
    "build": "yarn barrel && gulp build:clean-up && tsc --project tsconfig.lib.json",
    "build:ci": "yarn build && gulp deploy:prepare",
    "build:docs": "typedoc --options typedoc.json  --tsconfig tsconfig.docs.json --includeDeclarations --exclude \"**/*+(index|api|.spec|.e2e).ts\" --excludeNotExported --excludePrivate --excludeProtected --excludeExternals --stripInternal",
    "autofix": "yarn run lint:debug && yarn run prettier:format && yarn run lint:inspect",
    "lint:debug": "tslint --format prose --project tsconfig.json --fix",
    "lint:inspect": "tslint --format stylish --project tsconfig.json && yarn run cspell:check",
    "lint:codestyle": "yarn run prettier:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "yarn run test",
    "prettier:check": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --check \"./**/*.{json,js,ts}\"",
    "prettier:format": "prettier --loglevel log --config ./.prettierrc --ignore-path ./.prettierignore --write \"./**/*.{json,js,ts}\"",
    "cspell:check": "cspell \"src/**/*.*\" --config=\"cspell.json\""
  },
  "dependencies": {
    "fancy-log": "^1.3.3",
    "snake-case": "^3.0.3",
    "uuid": "^8.3.0"
  },
  "optionalDependencies": {
    "@angular/core": "^10.0.0",
    "@ngxs/store": "^3.6.2",
    "rxjs": "^6.6.0"
  },
  "devDependencies": {
    "@angular/core": "^10.0.0",
    "@ngxs/store": "^3.6.2",
    "@types/fancy-log": "^1.3.1",
    "@types/gulp": "^4.0.6",
    "@types/jest": "^26.0.4",
    "@types/node": "^14.0.23",
    "@types/uuid": "^8.0.0",
    "barrelsby": "^2.2.0",
    "cspell": "^4.0.63",
    "cspell-dict-russian": "^1.1.17",
    "gulp": "^4.0.2",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "rxjs": "^6.6.0",
    "ts-jest": "^26.1.2",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.2",
    "typedoc": "^0.19.2",
    "typedoc-plugin-external-module-name": "^4.0.3",
    "typescript": "^3.9.6"
  },
  "bundledDependencies": [
    "snake-case",
    "uuid",
    "fancy-log"
  ],
  "browser": {
    "fs": false,
    "path": false
  }
}
