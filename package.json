{
  "name": "@meistersoft/utilities",
  "version": "0.1.0",
  "main": "dist/index.js",
  "license": "SEE LICENSE IN LICENSE",
  "description": "SNH MeisterSoft utilities library",
  "repository": {
    "type": "git",
    "url": "https://git.meistersoft.ru/common/utilities.git"
  },
  "scripts": {
    "barrel": "barrelsby --config=\"./barrelsby.json\" --directory=\"./src/lib\"",
    "build": "yarn barrel && gulp build:clean-up && tsc --project tsconfig.lib.json",
    "build:ci": "yarn build && gulp deploy:prepare",
    "autofix": "yarn run lint:debug && yarn run prettier:format && yarn run lint:inspect",
    "lint:debug": "tslint --format prose --project tsconfig.json --fix",
    "lint:inspect": "tslint --format stylish --project tsconfig.json && yarn run cspell:check",
    "lint:codestyle": "yarn run prettier:check",
    "prettier:check": "prettier --config ./.prettierrc --ignore-path ./.prettierignore --check \"./**/*.{json,js,ts}\"",
    "prettier:format": "prettier --loglevel log --config ./.prettierrc --ignore-path ./.prettierignore --write \"./**/*.{json,js,ts}\"",
    "cspell:check": "cspell \"src/**/*.*\" --config=\"cspell.json\""
  },
  "devDependencies": {
    "@types/fancy-log": "^1.3.1",
    "@types/gulp": "^4.0.6",
    "@types/node": "^14.0.23",
    "barrelsby": "^2.2.0",
    "cspell": "^4.0.63",
    "cspell-dict-russian": "^1.1.17",
    "fancy-log": "^1.3.3",
    "gulp": "^4.0.2",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.6"
  },
  "browser": {
    "fs": false,
    "path": false
  }
}
